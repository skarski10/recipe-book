@{
    Layout="Shared/_Layout.cshtml";
}

<div class="row">
    <h1>@Model["recipe"].GetRecipeName()</h1><br>
    <h3>@Model["recipe"].GetDescription()</h3>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Instructions:</h3>
        <hr>
        @foreach(string instruction in @Model["instructions"]){
            <h4>@instruction</h4>
        }
    </div>
    <div class="col-md-6">
        <h3>Ingredients:</h3>
        <hr>
        @foreach(var ingredient in @Model["recipe"].GetIngredients())
        {
            <ul>
            <li>@ingredient.GetIngredientName()</li>
            </ul>
        }
    </div>
</div>
<hr>
<div class="row">
    <h3>Add Ingredients:</h3>
    <form class="" action="/recipe/@Model["recipe"].GetRecipeId()/@Model["recipe"].GetRecipeName()" method="post">
        @foreach(var ingredient in @Model["ingredients"])
        {
            <label for="ingredient">@ingredient.GetIngredientName()
                <input type="checkbox" name="ingredient" value="@ingredient.GetIngredientId()">
            </label>
        }
        <br>
        <button type="submit" class="btn">Add ingredients</button>
    </form>
</div>
